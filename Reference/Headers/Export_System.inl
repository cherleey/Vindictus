//=Release_
void Engine::Release_System(void)
{
	if(0 != CTimer_Manager::GetInstance()->DestroyInstance())
		MSG_BOX("CTimer_Manager Release Failed");

	if(0 != CFrame_Manager::GetInstance()->DestroyInstance())
		MSG_BOX("CFrame_Manager Release Failed");

	if(0 != CFont_Manager::GetInstance()->DestroyInstance())
		MSG_BOX("CFont_Manager Release Failed");

	if(0 != CInput_Device::GetInstance()->DestroyInstance())
		MSG_BOX("CFont_Manager Release Failed");

	if(0 != CGraphicDev::GetInstance()->DestroyInstance())
		MSG_BOX("CGraphicDev Release Failed");		
}